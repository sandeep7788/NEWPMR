<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gradient"
                    android:fontFamily="@font/baloo"
                    android:gravity="center"
                    android:padding="15dp"
                    android:src="@drawable/loginbg"
                    android:textSize="25dp" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="9dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="15dp"
                        android:importantForAutofill="yesExcludeDescendants"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="9dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.65999997">

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.64">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/worksans_medium"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="Welcome to PMR"
                                android:textColor="@color/c_black"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/worksans_medium"
                                android:gravity="center"
                                android:text="Create Your New Wallet"
                                android:textColor="@color/c_gray2"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/worksans_medium"
                                android:gravity="center"
                                android:padding="1dp"
                                android:text="And Start to Experience the new Recharge System"
                                android:textColor="@color/c_gray2"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/edt_loginID"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20.0dip"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="20.0dip"
                                android:background="@drawable/border3"
                                android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                                android:drawablePadding="4dp"
                                android:drawableTint="@color/c_gray2"
                                android:elevation="1dp"
                                android:hint="User Name"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:paddingTop="9dp"
                                android:paddingBottom="9dp"
                                android:singleLine="true"
                                android:textColor="@color/c_black"
                                android:textColorHighlight="@color/white_color"
                                android:textColorHint="@color/c_gray2"
                                android:textSize="17dp" />

                            <EditText
                                android:id="@+id/edt_password"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20.0dip"
                                android:layout_marginTop="9dp"
                                android:layout_marginRight="20.0dip"
                                android:background="@drawable/border3"
                                android:drawableLeft="@drawable/ic_baseline_lock_24"
                                android:drawablePadding="4dp"
                                android:drawableTint="@color/c_gray2"
                                android:elevation="1dp"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:paddingLeft="10dp"
                                android:paddingTop="9dp"
                                android:paddingBottom="9dp"
                                android:singleLine="true"
                                android:textColor="@color/c_black"
                                android:textColorHighlight="@color/white_color"
                                android:textColorHint="@color/c_gray2"
                                android:textSize="17dp" />


                            <!--
                                        <FrameLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20.0dip"
                                            android:layout_marginTop="10.0dip"
                                            android:layout_marginRight="20.0dip"
                                            android:background="#a0041e37"
                                            android:padding="10.0dip">

                                            &lt;!&ndash;
                                            <ImageView
                                                android:id="@+id/img_show"
                                                android:layout_width="20.0dip"
                                                android:layout_height="20.0dip"
                                                android:layout_gravity="right"
                                                android:src="@drawable/show"
                                                android:visibility="gone" />
                    &ndash;&gt;

                                            <ImageView
                                                android:id="@+id/img_hide"
                                                android:layout_width="20.0dip"
                                                android:layout_height="20.0dip"
                                                android:layout_gravity="right"
                                                android:src="@drawable/hide" />
                                        </FrameLayout>
                    -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:layout_marginTop="2dp"
                                android:foregroundGravity="center|right"
                                android:gravity="center|right"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="4dp"
                                    android:background="@color/c_blue"
                                    android:foregroundGravity="center" />

                                <TextView
                                    android:id="@+id/tvForgotPassword"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginBottom="3.0dip"
                                    android:foregroundGravity="center"
                                    android:gravity="center"
                                    android:text="Forgot password ?"
                                    android:textColor="@color/c_black"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <Button
                                android:id="@+id/btnSignIn"
                                android:layout_width="150dp"
                                android:layout_height="39dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="3.0dip"
                                android:background="@drawable/blue_button_background"
                                android:backgroundTint="@color/c_blue"
                                android:fontFamily="@font/baloo"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="Log In"
                                android:textColor="#ffffffff" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>