<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#fafafa">

    <androidx.cardview.widget.CardView
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:elevation="4dp"
        android:paddingTop="2dp"
        android:background="?attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp">

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:foregroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/item_layout"
                app:layout_constraintEnd_toEndOf="@+id/amount1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/item_layout"
                app:layout_constraintTop_toTopOf="@+id/item_layout" />

                <TextView
                    android:id="@+id/txt_Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/c_blue_dark"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="$ 5000000"
                    android:textColor="@color/c_gray2"
                    android:textSize="@dimen/text_title"
                    android:layout_marginRight="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/item_layout"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/item_layout"
                    app:layout_constraintTop_toTopOf="parent"/>



            <LinearLayout
                android:id="@id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:minHeight="80dp">

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="9dp"
                    android:background="@drawable/bg_cercular_shape"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:foregroundGravity="center"
                    android:backgroundTint="@color/c_blue_dark">

                    <TextView
                        android:id="@+id/txt_cr_dr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Cr"
                        android:textSize="@dimen/text_title"
                        android:foregroundGravity="center"
                        android:textColor="#ffffff"
                        android:backgroundTint="@color/c_blue_dark"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:minHeight="180dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="80dp"
                    android:foregroundGravity="center">







                        <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:gravity="center|left"
                            android:text="Paid to DTH Recharge"
                            android:textColor="@color/c_gray1"
                            android:textSize="@dimen/text_small"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/worksans_medium"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/c_gray1"
                            android:textSize="@dimen/text_small"
                            android:layout_gravity="left"
                            android:fontFamily="@font/worksans_medium"/>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/c_gray1"
                android:foregroundGravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/amount1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/item_layout"
                app:layout_constraintTop_toTopOf="@+id/item_layout"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>