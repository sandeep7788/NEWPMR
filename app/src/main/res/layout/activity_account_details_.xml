<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Activitys.Personal_detailsActivity"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_layout" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="12dp"
                android:elevation="9dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingRight="9dp"
                    android:layout_marginBottom="9dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="9dp"
                    android:layout_marginTop="12dp">

                    <!--
                                    <ImageView
                                        android:id="@+id/edt_icon"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_baseline_edit_24"
                                        android:tint="@color/white_color"
                                        android:padding="4dp"
                                        android:layout_gravity="right"
                                        android:foregroundGravity="right"
                                        android:layout_marginRight="25dp"
                                        android:background="@drawable/background_shadow_circuler"
                                        android:backgroundTint="@color/black"
                                        />
                    -->




                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="12dp"
                        app:hintTextColor="@color/black"
                        android:layout_marginLeft="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_bankname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Bank Name"
                            android:textColorHint="@color/black"
                            android:textSize="12dp"
                            android:inputType="textPersonName"
                            android:backgroundTint="@color/gpvch_black"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_account_holdername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Account holder name"
                            android:textSize="12dp"
                            android:inputType="textEmailAddress"
                            android:backgroundTint="@color/gpvch_black"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_mobileno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Account No"
                            android:textSize="12dp"
                            android:inputType="number"
                            android:backgroundTint="@color/gpvch_black"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Account Type"
                            android:textSize="12dp"
                            android:inputType="textPostalAddress"
                            android:backgroundTint="@color/gpvch_black"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_ifsc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="IfSC Code"
                            android:textSize="12dp"
                            android:inputType="text"
                            android:backgroundTint="@color/gpvch_black"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_swiftcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Swift Code"
                            android:textSize="12dp"
                            android:inputType="number"
                            android:backgroundTint="@color/gpvch_black"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nominee Details"
                        android:textSize="21dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="4dp"
                        android:paddingBottom="2dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/black"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="15dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nominee Name"
                            android:textSize="12dp"
                            android:inputType="textPersonName"
                            android:backgroundTint="@color/gpvch_black"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_relation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Relation"
                            android:textSize="12dp"
                            android:inputType="text"
                            android:backgroundTint="@color/gpvch_black"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Date Of Birth"
                            android:textSize="12dp"
                            android:inputType="date"
                            android:backgroundTint="@color/gpvch_black"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="Submit"
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp"
                        android:fontFamily="@font/worksans_medium"
                        android:textSize="12dp"
                        android:background="@drawable/whitepmrlogo"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="9dp"
                        android:textColor="@color/white_color"
                        android:layout_marginTop="12dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</layout>